{
  "name": "sidenote",
  "displayName": "sideNote",
  "description": "Highlight code, add comments and bookmarks visually",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.3"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["onCommand:sidenote.highlightSelection"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sidenote.highlightSelection",
        "title": "Highlight selected text"
      },
      {
        "command": "sidenote.addNote",
        "title": "Add Note to Line"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
